<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:YouYan.Rabbit.Components.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             Width="400"
             Height="400"
             x:Class="YouYan.Rabbit.Components.Views.WhatNewView"
             x:DataType="viewModels:WhatNewViewModel">
    <Grid RowDefinitions="Auto,*">
        <SelectableTextBlock Text="{Binding Model.Version}" HorizontalAlignment="Left" Margin="5" Foreground="Gray" />
        <SelectableTextBlock Margin="5" Grid.Row="1" Text="{Binding Model.Description}" TextWrapping="Wrap" />
    </Grid>
</UserControl>